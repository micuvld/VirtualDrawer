<div ng-controller="SideNavController as sideNavCtrl" ng-cloak>
  <md-sidenav
  class="md-sidenav-left"
  md-component-id="left"
  md-is-locked-open="$mdMedia('gt-md')"
  md-whiteframe="4">

    <md-toolbar class="md-theme-indigo" ng-click="goHome()">
      <h1 class="md-toolbar-tools">
      Virtual Drawer
      </h1>
    </md-toolbar>
        <button class="side-button" ng-click="toggleAddNoteModal()">Add note</button>
        <label>Search:
          <input ng-model="searchTag">
        </label>
        <div id="navigateTags" style="overflow-y: scroll; height:500px">
          <div ng-repeat="tag in navigateTags | filter:{name: searchTag}"
                class="tag" ng-click="switchToTag(tag.id)"
               style="background-color: #4527a0; margin-top:5px">{{tag.name}}
          </div>
        </div>
    </md-content>

  </md-sidenav>

  <div id="add_note_modal" add-note-modal class="modal fade" role="dialog" >
    <div class="modal-dialog" ng-controller="NotesController as noteCtrl">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add note</h4>
        </div>
        <div class="modal-body">
          <label>Note title:</label>
          <input type="text", ng-model="note.name">
          <br>
          <label>Note itself:</label>
          <br>
          <textarea rows="5" cols="50" ng-model="note.details"></textarea>
          <br>
          <label>Tag:</label>
          <select ng-options="tag.name for tag in tags" ng-model="note.tag"></select>
        </div> 
        <div class="modal-footer">
          <button type="button" class="btn btn-default" ng-click="addNote()">Apply</button>
        </div>
      </div>
    </div>

  </div>
</div>